@page "/Refill"
@using System.Text.Json
@using Microsoft.AspNetCore.Components.Forms
@using MedicineDispencer.Data
@inject PillDispenserContext Db
@inject IJSRuntime JSRuntime

<div class="container">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">ðŸ’‰ Nieuwe Medicatie Importeren</h3>
        </div>
        <div class="card-body">
            <p>Upload een JSON-bestand met medicatiegegevens (naam, dosering).</p>
            <InputFile OnChange="HandleFileSelected" />
        </div>
    </div>
</div>

@code {
    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using var stream = file.OpenReadStream();
            var meds = await JsonSerializer.DeserializeAsync<List<Medication>>(stream);

            if (meds != null)
            {
                foreach (var med in meds)
                {
                    // Avoid duplicates
                    if (!Db.Medications.Any(m => m.Name == med.Name && m.Dosage == med.Dosage))
                    {
                        Db.Medications.Add(med);
                    }
                }
                await Db.SaveChangesAsync();
                await JSRuntime.InvokeVoidAsync("alert", "Medicatie succesvol geÃ¯mporteerd!");
            }
        }
    }
}
